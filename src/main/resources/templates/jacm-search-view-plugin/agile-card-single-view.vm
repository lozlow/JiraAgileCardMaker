  <table>
    <tbody>
      <tr>
        <td rowspan="2" class="project-info $!issueType">
          <span class="project-key">$!projectKey</span>
          <br/>
          <span class="issue-number">$!projectIssueNumber</span>
        </td>
        <td class="priority">
        	<span class="sup-text">$!priority.getPriorityName()</span>
        	<br />
        	<i class="fa $!priority.getClassName()" style="color: $!priority.getColour();"></i>
        </td>
        <td colspan="2" class="estimate-info">
        	#if ($!estimate != "")
        		<span class="sup-text">Estimate</span>
	        	<br />
	        	<span class="text bolded">$!estimate</span>
        	#else
        		<span class="sup-text">No Estimate</span>
        	#end
        </td>
        <td class="actual-info">
        	#if ($!actual != "")
        		<span class="sup-text">Actual</span>
	        	<br />
	        	<span class="text bolded">$!actual</span>
        	#else
        		<span class="sup-text">No Actual</span>
        	#end
        </td>
      </tr>
      <tr>
        <td colspan="2" class="spacer">&nbsp;</td>
        <td rowspan="2" colspan="2" class="sub-tasks">
	        Sub-tasks <span class="bolded">($!numsubtasks)</span>
        	#if ($!numsubtasks != 0)
	        	<br />
	        	<ul class="sub-task-list">
	        	#foreach ($task in $!subtasks)
	        		<li>$!task</li>
	        	#end
	        	</ul>
	        	$!restsubtasks
	        #else 
	        	&nbsp;
	        #end
        </td>
      </tr>
      <tr>
        <td colspan="3" class="summary-info">
        	#if ($!epic != "")
        		<span class="epic label">$!epic</span>
        		<p class="break">&nbsp;</p>
    		#end
        	#if ($!parent != "")
        		<span class="parent bolded">$!parent</span>
        		<p class="break">&nbsp;</p>
        	#end
        	$!summary
        </td>
      </tr>
    </tbody>
  </table>